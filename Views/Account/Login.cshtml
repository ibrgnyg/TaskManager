@model Login
@{
	ViewData["Title"] = "Login";
}

<h1>Login</h1>


<div class="container">



	<div class="card bg-light">
		<article class="card-body mx-auto" style="max-width: 400px;">

			<form asp-action="login" asp-controller="account">

				
				<div class="alert-danger">@ViewBag.ErrorPassword</div>
				<div class="alert-danger">@ViewBag.NoUser</div>

				<div class="form-group input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
					</div>
					<input asp-for="Email" class="form-control" placeholder="Email address" type="email">
				</div>


				<div class="form-group input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
					</div>
					<input class="form-control" asp-for="Password" placeholder="Create password" type="password">
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-block"> giriş yap  </button>
				</div> <!-- form-group// -->

			</form>
		</article>
	</div>
</div>
